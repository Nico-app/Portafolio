{
  "name": "portafolio",
  "private": true,
  "version": "1.0.0",
  "engines": {
    "node": "16.x"
  },
  "description": "Profile portfolio project",
  "homepage": "to be decided",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Maxioliva/Ecommerce101.git"
  },
  "author": "",
  "scripts": {
    "dev": "concurrently -r 'npm run dev:client' 'npm run dev:server'",
    "dev:client": "PORT=3000 vite",
    "dev:server": "PORT=4420 ts-node-dev --respawn --transpile-only --watch src/server --exit-child src/server/index.ts",
    "build": "concurrently -r 'npm run prepare-build' 'npm run build:client' 'npm run build:server'",
    "prepare-build": "rm -rf build && mkdir -p build/client && mkdir -p build/server && cp -r public/index.html build/client",
    "build:client": "vite build",
    "build:server": "cd src/server && NODE_ENV=production tsc",
    "serve": "concurrently -r 'npm run serve:server' 'npm run serve:client'",
    "serve:client": "PORT=3000 vite preview",
    "serve:server": "PORT=4420 ts-node-dev build/server/index.js --cors",
    "check-lint": "eslint 'src/**/*.ts{,x}'",
    "fix-lint": "eslint --fix 'src/**/*.ts{,x}'",
    "start": "node build/server/index.js"
  },
  "dependencies": {
    "@types/cors": "^2.8.12",
    "@types/morgan": "^1.9.3",
    "@vitejs/plugin-react": "^4.0.0",
    "axios": "^0.26.1",
    "body-parser": "^1.20.1",
    "classnames": "^2.3.2",
    "concurrently": "^7.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "firebase": "^9.21.0",
    "firebase-admin": "^11.0.1",
    "formik": "^2.2.9",
    "lodash.debounce": "^4.0.8",
    "morgan": "^1.10.0",
    "path": "^0.12.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-router-dom": "^6.11.1",
    "typescript": "^5.0.2",
    "vite": "^4.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/node": "^7.17.10",
    "@babel/plugin-proposal-decorators": "*",
    "@types/lodash.debounce": "^4.0.7",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.38.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "prettier": "^2.8.8",
    "rollup-plugin-visualizer": "^5.9.0",
    "sass": "^1.62.1",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^2.0.0"
  }
}
